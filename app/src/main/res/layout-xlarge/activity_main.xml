<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.noealcantar.calculadora.MainActivity"
    android:weightSum="1">


    <TextView
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#99DADAF1"
        android:gravity="right"
        android:id="@+id/textView2"
        android:paddingTop="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:id="@+id/textView"
        android:background="#99DADAF1"
        android:gravity="right"
        android:textColor="@color/resultado"
        android:text=""
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textSize="28sp"
        android:paddingTop="20dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#DADADD"
        android:layout_height="350dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <Button
                android:text="7"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:background="@color/boton"
                android:id="@+id/btn7" />

            <Button
                android:text="8"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:background="@color/boton"
                android:id="@+id/btn8" />

            <Button
                android:text="9"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:background="@color/boton"
                android:id="@+id/btn9" />

            <Button
                android:text="C"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/btnClear"
                android:background="@color/boton"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <Button
                android:text="4"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:background="@color/boton"
                android:id="@+id/btn4" />

            <Button
                android:text="5"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:background="@color/boton"
                android:id="@+id/btn5" />

            <Button
                android:text="6"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:background="@color/boton"
                android:id="@+id/btn6" />

            <Button
                android:text="="
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/boton"
                android:layout_weight="1"
                android:id="@+id/btnequals" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <Button
                android:text="1"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:background="@color/boton"
                android:id="@+id/btn1" />

            <Button
                android:text="2"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:background="@color/boton"
                android:id="@+id/btn2" />

            <Button
                android:text="3"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:background="@color/boton"
                android:id="@+id/btn3" />

            <Button
                android:text="+"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:background="@color/boton"
                android:id="@+id/btnsuma" />

            <Button
                android:text="-"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:background="@color/boton"
                android:id="@+id/btnresta"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <Button
                android:text="0"
                android:layout_width="65dp"
                android:background="@color/boton"
                android:layout_height="match_parent"
                android:id="@+id/btn0" />

            <Button
                android:text="."
                android:layout_width="65dp"
                android:background="@color/boton"
                android:layout_height="match_parent"
                android:id="@+id/btnpunto" />

            <Button
                android:text="+/-"
                android:layout_width="65dp"
                android:background="@color/boton"
                android:layout_height="match_parent"
                android:id="@+id/btnmasmenos" />

            <Button
                android:text="x"
                android:layout_width="65dp"
                android:background="@color/boton"
                android:layout_height="match_parent"
                android:id="@+id/btnmultiplicar" />

            <Button
                android:text="x"
                android:layout_width="65dp"
                android:background="@color/boton"
                android:layout_height="match_parent"
                android:id="@+id/btndividir"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
